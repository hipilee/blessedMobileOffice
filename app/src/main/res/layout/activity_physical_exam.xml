<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg"
    android:orientation="vertical"
    tools:context="com.jiaying.workstation.activity.PhysicalExamActivity">

    <include layout="@layout/comm_app_title" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.191" />

            <Button
                android:id="@+id/ask_btn"
                style="@style/btn_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.618"
                android:text="询问" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.191" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.191" />

            <Button
                android:id="@+id/check_btn"
                style="@style/btn_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.618"
                android:text="体格检查" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.191" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.191" />


            <LinearLayout
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_weight="0.618">
                <Button
                    style="@style/btn_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/btn_margin"
                    android:text="保存到服务器" />
                <Button
                    android:layout_margin="@dimen/btn_margin"
                    style="@style/btn_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="提交审核" />
            </LinearLayout>


            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.191" />

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/copyright_view" />
</LinearLayout>
