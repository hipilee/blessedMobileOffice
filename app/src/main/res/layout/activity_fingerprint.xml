<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/global_bg"
    tools:context="com.jiaying.workstation.activity.FingerprintActivity">

    <include layout="@layout/comm_app_title"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/head_image"
            android:layout_width="@dimen/head_size"
            android:layout_height="@dimen/head_size"
            android:layout_margin="@dimen/btn_padding"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_norse" />

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_txt"
                style="@style/txt_black_style"
                android:text="姓名" />

            <TextView
                android:id="@+id/id_txt"
                style="@style/txt_grey_small_style"
                android:layout_marginTop="@dimen/btn_padding"
                android:text="43252" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></LinearLayout>
    <include layout="@layout/copyright_view"/>
</LinearLayout>
